<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>New Faction</h3>
        </div>
        <div class="card-body">
            <form action="/factions/new-faction" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Name" autofocus/>
                </div>
                <div class="form-group">
                    <label for="image">Bandera Facción</label>
                    <input type="file" class="form-control-file" name="image">
                </div>
                <div class="form-group">
                    <input type="text" name="slug" class="form-control" placeholder="Slug" />
                </div>
                <div class="form-group">
                    <select class="form-select" aria-label="Select alliance" name="alliance">
                        <option selected>Select alliance</option>
                        <option value="0">Telerianos</option>
                        <option value="1">Pacto de Gaellen</option>
                        <option value="2">Corrompidos</option>
                        <option value="3">Unión Niresana</option>
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>